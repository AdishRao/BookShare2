<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lw.bookshare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login_Page"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Registration" />
        <activity
            android:name=".Home_Page"
            android:label="Home" />
        <activity
            android:name=".Details_Page"
            android:label="User Details" />
        <activity android:name=".edit_Library" />
        <activity android:name=".search_Page" />
        <activity android:name=".view_Lib" />
        <activity android:name=".displayUserBooks"></activity>
    </application>

</manifest>